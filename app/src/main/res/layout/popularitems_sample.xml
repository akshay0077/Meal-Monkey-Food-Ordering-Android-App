<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/igsampleimage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="@string/topline"
        android:src="@drawable/pasta64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txsampleitem"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="@string/pasta"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/igsampleimage"
        app:layout_constraintStart_toStartOf="@+id/igsampleimage"
        app:layout_constraintTop_toBottomOf="@+id/igsampleimage" />

</androidx.constraintlayout.widget.ConstraintLayout>