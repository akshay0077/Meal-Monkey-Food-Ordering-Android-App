<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="#17FF9800"
        android:elevation="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#17FF9800">

            <ImageView
                android:id="@+id/igAddCartImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="6dp"
                android:background="@drawable/search_bg"
                android:contentDescription="@string/app_name"
                android:padding="4dp"
                android:src="@drawable/pasta64"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txAddCartFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/american_pasta"
                app:layout_constraintStart_toEndOf="@+id/igAddCartImage"
                app:layout_constraintTop_toTopOf="@+id/igAddCartImage" />

            <TextView
                android:id="@+id/txallitemspecialsample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/special"
                app:layout_constraintStart_toStartOf="@+id/txAddCartFoodName"
                app:layout_constraintTop_toBottomOf="@+id/txAddCartFoodName" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/american_pasta"
                android:src="@drawable/star"
                app:layout_constraintStart_toStartOf="@+id/txallitemspecialsample"
                app:layout_constraintTop_toBottomOf="@+id/txallitemspecialsample" />

            <TextView
                android:id="@+id/txallitemratingsample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/_4_3"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/txDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/paid_delivery"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="@+id/txallitemratingsample"
                app:layout_constraintEnd_toStartOf="@+id/btnCartPrice"
                app:layout_constraintStart_toEndOf="@+id/txallitemratingsample"
                app:layout_constraintTop_toBottomOf="@+id/txallitemspecialsample" />

            <Button
                android:id="@+id/btnCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="6dp"
                android:text="@string/_250"
                app:layout_constraintBottom_toBottomOf="@+id/txallitemratingsample"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txAddCartFoodName" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>